  <!-- JavaScript -->
  <script>
    // Category filtering function
    function filterByCategory(category) {
      // Hide all content first
      document.querySelectorAll('.rule-card, .rule-summary[data-category]').forEach(el => {
        el.style.display = 'none';
      });

      // Show selected category
      if (category === 'all') {
        document.querySelectorAll('.rule-card, .rule-summary[data-category]').forEach(el => {
          el.style.display = 'block';
        });
      } else {
        // Show category headers
        document.querySelectorAll(`.rule-summary[data-category*="${category}"]`).forEach(el => {
          el.style.display = 'block';
        });
        // Show matching cards
        document.querySelectorAll(`.rule-card[data-category*="${category}"]`).forEach(el => {
          el.style.display = 'block';
        });
      }

      // Update active category button
      document.querySelectorAll('.category-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      document.querySelector(`.category-btn[data-category="${category}"]`).classList.add('active');
    }

    // Initialize by hiding all content
    document.addEventListener('DOMContentLoaded', function() {
      filterByCategory('all'); // Start with all hidden
    });

    function updateBackToHomeText(lang) {
        const linkTextElement = document.getElementById('back-to-home-text');
        if (linkTextElement) { // Check if element exists
            if (lang === 'es') {
                linkTextElement.textContent = 'Volver al inicio';
            } else {
                linkTextElement.textContent = 'Back to Home';
            }
        }
    }

    function setActiveLanguage(lang) {
        document.querySelectorAll('.lang').forEach(el => {
            el.style.display = 'none';
        });

        // Show main content sections for the active language
        const mainContentDivs = document.querySelectorAll(`div.lang-${lang}.space-y-5`);
        mainContentDivs.forEach(div => div.style.display = 'block');

        // Handle disclaimer note (it won't find these on amenity page, which is fine)
        const disclaimerEn = document.querySelector('.disclaimer-note-container .lang-en');
        const disclaimerEs = document.querySelector('.disclaimer-note-container .lang-es');
        if (disclaimerEn && disclaimerEs) {
            if (lang === 'en') {
                disclaimerEn.style.display = 'block';
                disclaimerEs.style.display = 'none';
            } else { // 'es'
                disclaimerEn.style.display = 'none';
                disclaimerEs.style.display = 'block';
            }
        }
      
        // Update active button
        document.querySelectorAll('.lang-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        const activeButton = document.getElementById(`${lang}-btn`);
        if (activeButton) {
            activeButton.classList.add('active');
        }
      
        localStorage.setItem('preferredLanguage', lang); // Using 'preferredLanguage' key
        document.documentElement.lang = lang; // Set HTML lang attribute
        updateBackToHomeText(lang); // Update back to home link text
    }
  
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize category buttons
      document.querySelectorAll('.category-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          filterByCategory(this.dataset.category);
        });
      });

        const currentYearSpan = document.getElementById('currentYear');
        if (currentYearSpan) {
            currentYearSpan.textContent = new Date().getFullYear();
        }
  
        const preferredLang = localStorage.getItem('preferredLanguage') || 'en';
        setActiveLanguage(preferredLang);

        const enButton = document.getElementById('en-btn');
        const esButton = document.getElementById('es-btn');

        if (enButton) {
            enButton.addEventListener('click', () => setActiveLanguage('en'));
        }
        if (esButton) {
            esButton.addEventListener('click', () => setActiveLanguage('es'));
        }

        // Scrolling Logic for rule cards
        const ruleCards = document.querySelectorAll('details.rule-card'); // Selector updated
        ruleCards.forEach(card => {
            card.addEventListener('toggle', function() {
                if (this.open) {
                    this.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    });
  </script>
</body>
</html>
